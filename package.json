{
  "name": "@crossplane-models/monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Crossplane models",
  "repository": {
    "type": "git",
    "url": "https://github.com/upbound/typescript-models-ts.git"
  },
  "homepage": "https://github.com/upbound/typescript-models-ts.git",
  "author": "Crossplane Maintainers <info@crossplane.io>",
  "license": "MIT",
  "keywords": [
    "kubernetes",
    "crossplane"
  ],
  "scripts": {
    "lint": "npm-run-all lint:*",
    "lint:eslint": "eslint . --ext .js,.ts,.cjs,.mjs",
    "lint:syncpack": "syncpack list-mismatches --types dev,prod,peer",
    "build": "turbo run build --concurrency 4",
    "clean": "pnpm -r --filter '!@crossplane-models/monorepo' exec -- rm -rf dist gen *.tsbuildinfo",
    "test": "vitest",
    "new-crd-package": "ts-node scripts/new-crd-package.ts",
    "fetch-github-crds": "ts-node scripts/fetch-github-crds.ts",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs}": "eslint --fix"
  },
  "engines": {
    "node": ">=14",
    "pnpm": ">=10.25.0"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.1",
    "@octokit/rest": "^22.0.1",
    "@octokit/auth-token": "^6.0.0",
    "@tsconfig/node14": "^1.0.3",
    "@types/node": "^25.0.0",
    "@types/yargs": "^17.0.35",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "@typescript-eslint/utils": "^8.49.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vitest": "^0.5.4",
    "execa": "^9.6.1",
    "human-id": "^4.1.3",
    "husky": "^9.1.7",
    "jest-extended": "^7.0.0",
    "lint-staged": "^16.2.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.7.4",
    "syncpack": "^13.0.4",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "turbo": "^2.6.3",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15",
    "yargs": "^18.0.0"
  },
  "syncpack": {
    "source": [
      "package.json",
      "core/*/package.json",
      "first-party/*/package.json",
      "internal/*/package.json",
      "models/**/package.json",
      "!models/**/dist/**",
      "utils/*/package.json"
    ],
    "versionGroups": [
      {
        "label": "Ignore workspace dependencies",
        "packages": [
          "**"
        ],
        "dependencies": [
          "@kubernetes-models/**"
        ],
        "dependencyTypes": [
          "dev",
          "prod",
          "peer"
        ],
        "isIgnored": true
      }
    ]
  },
  "packageManager": "pnpm@10.25.0"
}
