{
  "name": "@crossplane-models/monorepo",
  "version": "0.0.1",
  "private": true,
  "description": "Crossplane models",
  "repository": {
    "type": "git",
    "url": "https://github.com/upbound/typescript-models-ts.git"
  },
  "homepage": "https://github.com/upbound/typescript-models-ts.git",
  "author": "Crossplane Maintainers <info@crossplane.io>",
  "license": "MIT",
  "keywords": [
    "kubernetes",
    "crossplane"
  ],
  "scripts": {
    "lint": "npm-run-all lint:*",
    "lint:eslint": "eslint . --ext .js,.ts,.cjs,.mjs",
    "lint:syncpack": "syncpack list-mismatches --workspace false",
    "build": "turbo run build --concurrency 4",
    "clean": "pnpm -r --filter '!@crossplane-models/monorepo' exec -- rm -rf dist gen *.tsbuildinfo",
    "test": "vitest",
    "new-crd-package": "ts-node scripts/new-crd-package.ts",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs}": "eslint --fix"
  },
  "engines": {
    "node": ">=14",
    "pnpm": ">=10.25.0"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@tsconfig/node14": "^1.0.3",
    "@types/node": "^18.19.130",
    "@types/yargs": "^17.0.35",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vitest": "^0.0.57",
    "execa": "^5.1.1",
    "human-id": "^4.1.3",
    "husky": "^8.0.3",
    "jest-extended": "^3.2.4",
    "lint-staged": "^13.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.7.4",
    "syncpack": "^8.5.14",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "turbo": "^2.6.3",
    "typescript": "^5.9.3",
    "vitest": "^0.29.8",
    "yargs": "^17.7.2"
  },
  "syncpack": {
    "source": [
      "package.json",
      "core/*/package.json",
      "first-party/*/package.json",
      "internal/*/package.json",
      "models/**/package.json",
      "utils/*/package.json"
    ]
  },
  "packageManager": "pnpm@10.25.0"
}
